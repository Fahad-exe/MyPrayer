<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeActivity"
    android:orientation="vertical">

  <androidx.cardview.widget.CardView
      android:id="@+id/SearchcityRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_above="@id/FajrRl"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="20dp"
      app:cardElevation="10dp"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true">

    <EditText
        android:id="@+id/Searchcity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Enter City to Search"
        android:textColorHint="@color/bgBlack"
        android:inputType="text"
        android:textSize="20sp" />

    <ImageView

        android:id="@+id/search_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:layout_alignEnd="@id/SearchcityRl"
        android:contentDescription="Search"
        android:layout_gravity="right"
        android:src="@drawable/ic_search" />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/FajrRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:layout_above="@id/DhurRl"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      app:cardBackgroundColor="@color/white"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      >
    <TextView
        android:id="@+id/titlefajr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAJR"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titlefajr"
        android:id="@+id/Fajr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/DhurRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/AsrRl"
      android:layout_margin="5dp"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      app:cardBackgroundColor="@color/white"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      >
    <TextView
        android:id="@+id/titleDhur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dhuhr"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleDhur"
        android:id="@+id/Dhuhr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/AsrRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/MaghribRl"
      android:layout_margin="5dp"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      app:cardBackgroundColor="@color/white"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      >
    <TextView
        android:id="@+id/titleAsr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASR"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleAsr"
        android:id="@+id/Asr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView

      android:id="@+id/MaghribRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/IshaRl"
      android:layout_margin="5dp"
      app:cardElevation="10dp"
      app:cardCornerRadius="10dp"
      app:cardBackgroundColor="@color/white"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      >
    <TextView
        android:id="@+id/titleMaghrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAGHRIB"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleMaghrib"
        android:id="@+id/Maghrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView

      android:id="@+id/IshaRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/bottom_nav"
      android:layout_margin="5dp"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="10dp"
      app:cardElevation="10dp"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/titleIsha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Isha"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Isha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleIsha"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="0:00"
        android:textSize="20sp" />
  </androidx.cardview.widget.CardView>

  <include
      android:id="@+id/bottom_nav"
      layout="@layout/element_bottom_navigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_gravity="bottom"

      />
</RelativeLayout>