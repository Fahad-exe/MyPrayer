<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeActivity">

  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/SearchcityRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/FajrRl"
      >

    <EditText
        android:id="@+id/Searchcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:hint="Enter City to Search"
        android:gravity="center"
        android:textSize="20sp"
        />
    <ImageView

        android:id="@+id/search_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="70dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_search"
        />

  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/FajrRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      >
    <TextView
        android:id="@+id/titlefajr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAJR"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titlefajr"
        android:id="@+id/fajr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/DhurRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/FajrRl"
      android:layout_marginTop="5dp"
      >
    <TextView
        android:id="@+id/titleDhur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DHUR"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleDhur"
        android:id="@+id/Dhur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </RelativeLayout>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/AsrRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/DhurRl"
      android:layout_marginTop="5dp"
      >
    <TextView
        android:id="@+id/titleAsr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASR"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleAsr"
        android:id="@+id/Asr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </RelativeLayout>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/MaghribRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_below="@id/AsrRl"
      android:layout_marginTop="5dp"
      >
    <TextView
        android:id="@+id/titleMaghrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAGHRIB"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleMaghrib"
        android:id="@+id/Maghrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </RelativeLayout>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/IshaRl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/MaghribRl"
      android:layout_marginTop="5dp"
      >
    <TextView
        android:id="@+id/titleIsha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isha"
        android:gravity="center"
        android:textSize="20sp"
        />
    <TextView
        android:layout_below="@id/titleIsha"
        android:id="@+id/Isha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:gravity="center"
        android:textSize="20sp"
        />

  </RelativeLayout>
  <include
      layout="@layout/element_bottom_navigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_alignParentBottom="true"

      />
  </RelativeLayout>